<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constantContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/constantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="asdfasdfas"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/constantSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:text="asdfasdfas"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/constantVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/constantName"
        android:paddingTop="7dp"
        android:textSize="14sp"
        tools:text="asdfasdfas"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/constantUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/constantSymbol"
        android:paddingTop="7dp"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:text="asdfasdfas"/>

</RelativeLayout>
